<footer class="footer section has-bg-image text-center" style="background-image: url('<%= asset_path('footer-bg.jpg') %>')">
  <div class="container">
    <div class="footer-top grid-list">
      <div class="footer-brand has-before has-after">
        <a href="#" class="logo">
          <%= image_tag('logo.svg', width: 160, height: 50, loading: 'lazy', alt: 'grilli home') %>
        </a>
        <address class="body-4">
          Restaurant St, Delicious City, London 9578, UK
        </address>
        <a href="mailto:booking@grilli.com" class="body-4 contact-link">booking@grilli.com</a>
        <a href="tel:+88123123456" class="body-4 contact-link">Booking Request : +88-123-123456</a>
        <p class="body-4">
          Open : 09:00 am - 01:00 pm
        </p>
        <div class="wrapper">
          <div class="separator"></div>
          <div class="separator"></div>
          <div class="separator"></div>
        </div>
        <p class="title-1">Ticket Reservation</p>
        <p class="label-1">
          Name: <%=@online_reservation.name %><br>
          Phone Number: <%=@online_reservation.phone_number %><br>
          Pax: <%=@online_reservation.pax %><br>
          Date: <%=@online_reservation.date.strftime("%B %d, %Y") %><br>
          Time: <%=@online_reservation.time.strftime("%I:%M %p") %><br>
          Message: <%=@online_reservation.message %>
        </p>
      </div>
      <ul class="footer-list">
        <li>
          <%= link_to root_path, class: 'label-2 footer-link hover-underline' do %>
            Home
          <% end %>
        </li>
        <!-- Other list items -->
      </ul>
      <ul class="footer-list">
        <!-- Other list items -->
      </ul>
    </div>
    <div class="footer-bottom">
      <p class="copyright">
        &copy; <%= Time.now.year %> Grilli. All Rights Reserved | Crafted by <%= link_to 'codewithsadee', 'https://github.com/codewithsadee', target: '_blank', class: 'link' %>
      </p>
    </div>
  </div>
</footer>
