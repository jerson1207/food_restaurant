<section class="hero text-center" aria-label="home" id="home" data-controller="hero-slider">
  <ul class="hero-slider" data-target="hero-slider.slider">
    <li class="slider-item active" data-hero-slider-item data-target="hero-slider.sliderItem">
      <div class="slider-bg">
        <%= image_tag("hero-slider-1.jpg", width: 1880, height: 950, alt: "", class: "img-cover") %>
      </div>

      <p class="label-2 section-subtitle slider-reveal">Tradational & Hygine</p>

      <h1 class="display-1 hero-title slider-reveal">
        For the love of <br>
        delicious food
      </h1>

      <p class="body-2 hero-text slider-reveal">
        Come with family & feel the joy of mouthwatering food
      </p>

      <%= link_to "#", class: "btn btn-primary slider-reveal" do %>
        <span class="text text-1">View Our Menu</span>
        <span class="text text-2" aria-hidden="true">View Our Menu</span>
      <% end %>
    </li>

    <li class="slider-item" data-hero-slider-item data-target="hero-slider.sliderItem">
      <div class="slider-bg">
        <%= image_tag("hero-slider-2.jpg", width: 1880, height: 950, alt: "", class: "img-cover") %>
      </div>

      <p class="label-2 section-subtitle slider-reveal">delightful experience</p>

      <h1 class="display-1 hero-title slider-reveal">
        Flavors Inspired by <br>
        the Seasons
      </h1>

      <p class="body-2 hero-text slider-reveal">
        Come with family & feel the joy of mouthwatering food
      </p>

      <%= link_to "#", class: "btn btn-primary slider-reveal" do %>
        <span class="text text-1">View Our Menu</span>
        <span class="text text-2" aria-hidden="true">View Our Menu</span>
      <% end %>
    </li>

    <li class="slider-item" data-hero-slider-item data-target="hero-slider.sliderItem">
      <div class="slider-bg">
        <%= image_tag("hero-slider-3.jpg", width: 1880, height: 950, alt: "", class: "img-cover") %>
      </div>

      <p class="label-2 section-subtitle slider-reveal">amazing & delicious</p>

      <h1 class="display-1 hero-title slider-reveal">
        Where every flavor <br>
        tells a story
      </h1>

      <p class="body-2 hero-text slider-reveal">
        Come with family & feel the joy of mouthwatering food
      </p>

      <%= link_to "#", class: "btn btn-primary slider-reveal" do %>
        <span class="text text-1">View Our Menu</span>
        <span class="text text-2" aria-hidden="true">View Our Menu</span>
      <% end %>
    </li>
  </ul>

  <button class="slider-btn next" aria-label="Slide to next" data-action="click->hero-slider#slideNext">
    >>
  </button>

  <%= button_tag(type: 'button', class: 'slider-btn prev', 'aria-label': 'slide to previous', 'data-action': 'click->hero-slider#slidePrev') do %>
    <<
  <% end %>

  <%= link_to "#", class: "hero-btn has-after" do %>
    <%= image_tag("hero-icon.png", width: 48, height: 48, alt: "booking icon") %>
    <span class="label-2 text-center span">Book A Table</span>
  <% end %>
</section>
